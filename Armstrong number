num=int(input("Enter a number:"))
original_num=num
num_digit=0
sum_of_power=0
while num>0:
    num_digit+=1
    num//=10
num=original_num
while num>0:
 digit=num%10
 sum_of_power+=digit**num_digit
 num//=10
if(original_num==sum_of_power):
     print("It is an Armstrong number.")
else:
    print("It is not an Armstrong number")
    
